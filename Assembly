---
github:
  gh_pages: web

gem:
  active: true

dnote:
  title: Developer's Notes
  output: log/NOTES.rdoc
  labels: ~

yard:
  yardopts: true
  priority: 2

qed:
  files: spec
  active: true

qedoc:
  files: spec
  output: QED.rdoc

readme:
  service: custom
  document: |
    cmd = 'malt README.rdoc > site/readme.html'
    puts cmd; sh cmd

vclog:
  output:
    - log/ChangeLog.rdoc

email:
  mailto: 
    - ruby-talk@ruby-lang.org
    - rubyworks-mailinglist@googlegroups.com

